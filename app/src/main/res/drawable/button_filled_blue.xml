<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#33FFFFFF">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#1976D2" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item>
        <layer-list>
            <!-- Outer glow -->
            <item
                android:top="0dp"
                android:bottom="4dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#00000000"
                        android:centerColor="#401976D2"
                        android:endColor="#00000000"
                        android:angle="270" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
            <!-- Main gradient -->
            <item
                android:top="0dp"
                android:bottom="4dp"
                android:left="2dp"
                android:right="2dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#42A5F5"
                        android:centerColor="#1976D2"
                        android:endColor="#1565C0"
                        android:angle="135" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
            <!-- Top shine -->
            <item
                android:top="0dp"
                android:bottom="32dp"
                android:left="2dp"
                android:right="2dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#40FFFFFF"
                        android:endColor="#00FFFFFF"
                        android:angle="270" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>