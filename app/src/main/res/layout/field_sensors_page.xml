<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:background="#4caf50"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Field Sensors &amp; IoT Network"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â— REAL-TIME MONITORING"
                    android:textSize="12sp"
                    android:textColor="#e8f5e9"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/btnCloseFieldSensors"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_close"
                android:padding="4dp"
                android:background="?android:attr/selectableItemBackgroundBorderless" />

        </LinearLayout>

        <!-- Sensor Cards Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Row 1: Temperature & Humidity -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Temperature Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="220dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#80deea"
                        android:padding="16dp">

                        <!-- Header with icon and title -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸŒ¡ï¸"
                                android:textSize="24sp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Temperature"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#006064" />

                        </LinearLayout>


                        <!-- Circular Progress Indicator -->
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ProgressBar
                                android:id="@+id/progressTemperature"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_gravity="center"
                                android:indeterminate="false"
                                android:max="50"
                                android:progress="24"
                                android:progressDrawable="@drawable/circular_progress_cyan"
                                android:rotation="-90" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/txtTemperature"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="24.36"
                                    android:textSize="28sp"
                                    android:textStyle="bold"
                                    android:textColor="#004d40" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Celsius"
                                    android:textSize="11sp"
                                    android:textColor="#006064" />

                            </LinearLayout>

                        </FrameLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Humidity Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="220dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#ce93d8"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ’§"
                                android:textSize="24sp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Humidity"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#4a148c" />

                        </LinearLayout>


                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ProgressBar
                                android:id="@+id/progressHumidity"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_gravity="center"
                                android:indeterminate="false"
                                android:max="100"
                                android:progress="50"
                                android:progressDrawable="@drawable/circular_progress_purple"
                                android:rotation="-90" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/txtHumidity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="49.59"
                                    android:textSize="28sp"
                                    android:textStyle="bold"
                                    android:textColor="#6a1b9a" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Percent"
                                    android:textSize="11sp"
                                    android:textColor="#4a148c" />

                            </LinearLayout>

                        </FrameLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Row 2: Soil Moisture & Light Intensity -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Soil Moisture Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="220dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#a5d6a7"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸŒ±"
                                android:textSize="24sp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Soil Moisture"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#1b5e20" />

                        </LinearLayout>



                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ProgressBar
                                android:id="@+id/progressSoilMoisture"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_gravity="center"
                                android:indeterminate="false"
                                android:max="100"
                                android:progress="33"
                                android:progressDrawable="@drawable/circular_progress_green"
                                android:rotation="-90" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/txtSoilMoisture"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="33.1"
                                    android:textSize="28sp"
                                    android:textStyle="bold"
                                    android:textColor="#2e7d32" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Percent"
                                    android:textSize="11sp"
                                    android:textColor="#1b5e20" />

                            </LinearLayout>

                        </FrameLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Light Intensity (Lux) Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="220dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#fff59d"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â˜€ï¸"
                                android:textSize="24sp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Light Intensity"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#f57f17" />

                        </LinearLayout>



                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ProgressBar
                                android:id="@+id/progressLux"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_gravity="center"
                                android:indeterminate="false"
                                android:max="200"
                                android:progress="107"
                                android:progressDrawable="@drawable/circular_progress_yellow"
                                android:rotation="-90" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/txtLux"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="106.67"
                                    android:textSize="26sp"
                                    android:textStyle="bold"
                                    android:textColor="#f9a825" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Lux"
                                    android:textSize="11sp"
                                    android:textColor="#f57f17" />

                            </LinearLayout>

                        </FrameLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Row 3: Cloud Cover & Precipitation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Cloud Cover Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="220dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#b3e5fc"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â˜ï¸"
                                android:textSize="24sp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Cloud Cover"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#01579b" />

                        </LinearLayout>



                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ProgressBar
                                android:id="@+id/progressCloudCover"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_gravity="center"
                                android:indeterminate="false"
                                android:max="100"
                                android:progress="70"
                                android:progressDrawable="@drawable/circular_progress_lightblue"
                                android:rotation="-90" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/txtCloudCover"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="70.0"
                                    android:textSize="28sp"
                                    android:textStyle="bold"
                                    android:textColor="#0277bd" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Percent"
                                    android:textSize="11sp"
                                    android:textColor="#01579b" />

                            </LinearLayout>

                        </FrameLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Precipitation Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="220dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#90caf9"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸŒ§ï¸"
                                android:textSize="24sp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Precipitation"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#0d47a1" />

                        </LinearLayout>



                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ProgressBar
                                android:id="@+id/progressPrecipitation"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_gravity="center"
                                android:indeterminate="false"
                                android:max="10"
                                android:progress="0"
                                android:progressDrawable="@drawable/circular_progress_blue"
                                android:rotation="-90" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/txtPrecipitation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0.0"
                                    android:textSize="28sp"
                                    android:textStyle="bold"
                                    android:textColor="#1565c0" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="mm"
                                    android:textSize="11sp"
                                    android:textColor="#0d47a1" />

                            </LinearLayout>

                        </FrameLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Rain Detection Card (Full Width) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#80cbc4"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸŒ¦ï¸"
                                android:textSize="28sp"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rain Detection"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#004d40" />

                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txtRainDetection"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DRY"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#00695c"
                            android:background="#ffffff"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp" />

                        <TextView
                            android:id="@+id/txtRainValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Value: 0"
                            android:textSize="11sp"
                            android:textColor="#004d40"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Refresh Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRefreshSensors"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸ”„ REFRESH DATA"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="16sp"
                app:backgroundTint="#4caf50"
                app:cornerRadius="12dp"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- System Status Footer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff"
            android:padding="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="System Status"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="âœ“ All sensors operational"
                    android:textSize="12sp"
                    android:textColor="#4caf50" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last sync: Just now"
                    android:textSize="11sp"
                    android:textColor="#999999" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCloseFieldSensorsBottom"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="CLOSE"
                android:textColor="#666666"
                android:textStyle="bold"
                android:textSize="14sp"
                app:backgroundTint="@null"
                android:background="@drawable/button_outline_gray"
                app:strokeWidth="0dp"
                app:cornerRadius="16dp"
                android:layout_marginTop="12dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>